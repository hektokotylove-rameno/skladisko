<h1>Listing users</h1>
<table class="table table-striped">
  <tr>
    <th>ID</th>
    <th>Username</th>
    <th>Name</th>
    <th>Admin</th>
    <th>Actions</th>
  </tr>
 
  <% @users.each do |user| %>
    <tr>
      <td><%= user.id %></td>
      <td><%= user.username %></td>
      <td><%= user.name %></td>
      <td><%= user.admin %></td>
      <td>
        <div class="btn-group">
          <%= link_to 'Show', user_path(user), :class => "btn btn-default" %>
          <% if @current_user.admin %>
            <%= link_to 'Edit', edit_user_path(user), :class => "btn btn-default" %>
          <% end %>
          <%= link_to 'Change password', '/users/' + user.id.to_s + '/change_password',:class => "btn btn-default"%>
        </div>
      </td>
    </tr>
  <% end %>
</table>