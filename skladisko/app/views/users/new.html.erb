
  <h1>Create new user</h1>

  <div class="col-xs-4">
    <%= form_for :user, url: users_path do |user| %>
    <% if @user.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@user.errors.count, "error") %> prohibited
        this post from being saved:</h2>
         <div class="alert alert-danger">
          <% @user.errors.full_messages.each do |msg| %>
          <li><%= msg %></li>
          <% end %>
         </div>
      </div>
      <% end %>
      <p>
        <%= user.label :username %><br>
        <%= user.text_field :username, class: "form-control", placeholder: "Username" %>
      </p>

      <p>
        <%= user.label :password %><br>
        <%= user.password_field :password, class: "form-control", placeholder: "Password" %>
      </p>

      <p>
        <%= user.label :password_confirmation %><br>
        <%= user.password_field :password_confirmation, class: "form-control", placeholder: "Repeat password" %>
      </p>

      <p>
        <%= user.label :name %><br>
        <%= user.text_field :name, class: "form-control", placeholder: "Name" %>
      </p>

      <p>
        <%= user.submit class: "btn btn-primary" %>
      </p>
      <% end %>
    </div>
